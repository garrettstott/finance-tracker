<%= render 'friends/lookup' %>

<div class="col-lg-8">
<% if @friendships.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3" class="page-header">
          <h2>All Friends</h2>
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
      <tr>
        <td><%= friend.full_name %></td>
        <td><%= friend.email %></td>
        <td><%= link_to "View", user_path(friend), class: 'btn btn-primary btn-xs' %>
            <%= link_to "Remove", friendship_path(friend),
                                  method: :delete, data: {confirm: "Are you sure?"},
                                  class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
  <div class="row col-lg-12">
    <p class="lead">No Friends</p>
  </div>
<% end %>